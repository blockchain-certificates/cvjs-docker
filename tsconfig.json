{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "importsNotUsedAsValues": "remove",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "compileOnSave": false,
  "include": ["src"],
  "exclude": [
    "node_modules",
    "test"
  ]
}
